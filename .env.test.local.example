# Firebase Local Emulator Configuration
# Copy this file to .env.test.local for local E2E testing with emulator

VITE_USE_FIREBASE_EMULATOR=true

# Demo Firebase config (emulator ignores these but they must be present)
# DO NOT use real Firebase credentials here - use demo values
VITE_FIREBASE_API_KEY=demo-api-key
VITE_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=demo-project
VITE_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-MEASUREMENT

# Emulator endpoints (optional - defaults are used if not specified)
VITE_FIREBASE_AUTH_EMULATOR_URL=http://127.0.0.1:9099
VITE_FIRESTORE_EMULATOR_HOST=127.0.0.1
VITE_FIRESTORE_EMULATOR_PORT=8080
