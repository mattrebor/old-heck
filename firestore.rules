rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of the game
    function isGameOwner(gameData) {
      // For legacy games without createdBy, allow any authenticated user to update
      // For games with createdBy, only allow the owner
      return isSignedIn() &&
        (!gameData.keys().hasAll(['createdBy']) || request.auth.uid == gameData.createdBy.uid);
    }

    // Helper function to validate game creation data
    function isValidNewGame() {
      let data = request.resource.data;
      return data.createdBy.uid == request.auth.uid
          && data.createdBy.email == request.auth.token.email
          && data.keys().hasAll(['createdBy', 'setup', 'rounds', 'createdAt', 'updatedAt', 'status'])
          && data.rounds is list
          && data.status in ['in_progress', 'completed'];
    }

    // Helper function to check if setup can be edited
    function canEditSetup() {
      let oldData = resource.data;
      // Can edit setup if:
      // - No completed rounds yet (rounds array is empty)
      // - Current round is round 1 (inProgressRound.roundNumber == 1)
      // Frontend enforces additional check that no bids have been entered
      return oldData.rounds.size() == 0
          && oldData.get('inProgressRound', {}).get('roundNumber', 0) == 1;
    }

    // Helper function to validate game update data
    function isValidGameUpdate() {
      let data = request.resource.data;
      let setupChanged = data.setup != resource.data.setup;

      // Prevent changing the creator (if it exists)
      // Allow setup changes only if canEditSetup() returns true
      let createdByUnchanged = !data.keys().hasAll(['createdBy']) ||
                                data.createdBy == resource.data.createdBy;

      return createdByUnchanged
          && data.createdAt == resource.data.createdAt
          && (!setupChanged || canEditSetup());
    }

    // Games collection rules
    match /games/{gameId} {
      // Anyone can read games (for view-only links)
      allow read: if true;

      // Only authenticated users can create games
      // Must set correct createdBy fields
      allow create: if isSignedIn() && isValidNewGame();

      // Only the game creator can update their game
      // Cannot modify createdBy, setup, or createdAt
      allow update: if isGameOwner(resource.data) && isValidGameUpdate();

      // Only the game creator can delete their game
      allow delete: if isGameOwner(resource.data);
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
